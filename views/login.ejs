<style>
  body{background: #f4f4f4;}
</style>

<div class="ui four column centered grid" style="margin-top:100px;">
  <div class="column">
    <h2 class="ui center aligned icon header">
      <img src="/img/zhongqing.png" style="width:145px;height:34px;">
    </h2>
    <div class="ui hidden divider"></div>
    <form class="ui form" id="form_user_login">
      <div class="field">
        <label>用户名</label>
        <div class="ui input">
          <input type="text" id="username" placeholder="请输入用户名...">
        </div>
      </div>
      <div class="field">
        <label>密码</label>
        <div class="ui input">
          <input type="password" id="password" placeholder="请输入密码...">
        </div>
      </div>
      <div class="field">
        <label>&nbsp;</label>
        <button class="ui fluid positive button" id="btn" type="button" onclick="login();">登  录</button>
      </div>
    </form>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        setEnterKey("#password");
    });

    function login(){
        var username = $("#username", "#form_user_login").val();
        var password = $("#password", "#form_user_login").val();
        var verify_code = $("#verify_code").val();
        $.ajax({
            type: 'post',
            url: "/login",
            data: {username:username, password:hex_md5(password)},
            success: function(data, status) {
              if (status == 'success') {
                  location.href="/users/";
              } else {
                  alert('登录失败');
              }
            },
            error: function() {
              alert('登录失败');
            }
        });
    }
</script>
